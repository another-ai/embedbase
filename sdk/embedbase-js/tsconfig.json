{
  "include": ["src"],
  "exclude": ["node_modules/**/*.ts", "test/samples/sample.ts"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist/main",
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES2015",
    "resolveJsonModule": true,
    "strict": false,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "allowSyntheticDefaultImports": true
  }
}
